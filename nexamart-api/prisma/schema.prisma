generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int        @id        @default(autoincrement())
  name            String
  description     String
  price           Float
  stock_quantity  Int        @default(0)
  category        Market
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  //Relationship with User(Seller)
  seller      User   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  sellerId    Int

  @@map("products")
}

model User {
  id               Int       @id        @default(autoincrement())
  name             String
  email            String    @unique
  password         String
  role             Role      // Ensure this is referencing the enum correctly
  profileImage     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relation to Product(reverse relation)
  products        Product[]  

  @@map("users")
}

enum Role {
  buyer
  seller
}

enum Market {
stock
financial
commodity
special
command
forex
}
