generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id        @default(autoincrement())
  name             String
  email            String    @unique
  password         String
  role             Role      // Ensure this is referencing the enum correctly
  profileImage     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

enum Role {
  buyer
  seller
}
