generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role // Ensure this is referencing the enum correctly
  createdAt DateTime @default(now())
}

enum Role {
  buyer
  seller
}
